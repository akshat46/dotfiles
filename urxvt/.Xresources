! URxvt

! General settings
URxvt.internalBorder:    20
! URxvt.externalBorder:    5
URxvt.saveLines: 2000
URxvt.scrollBar: False
URxvt.scrollstyle: rxvt
URxvt.urgentOnBell: True
URxvt.cursorBlink: False

! :Bind C-0, C-+ and C-= to activate small, medium, and big font size resp.
! xvt.keysym.C-Up:     perl:font-size:increase
! URxvt.keysym.C-Down:   perl:font-size:decrease
! URxvt.keysym.C-S-Up:   perl:font-size:incglobal
! URxvt.keysym.C-S-Down: perl:font-size:decglobal

!Inconsolata
urxvt.font: xft:Hack:size=11
URxvt.boldFont: xft:Fira\ Mono\ for\ Powerline:size=11
URxvt*letterSpace: 0
URxvt.lineSpace: -1

! special
! X colors.
! Generated by 'wal'
*foreground:        #d1d8e6
*background:        #231f21
*.foreground:       #d1d8e6
*.background:       #231f21
emacs*foreground:   #d1d8e6
emacs*background:   #231f21
URxvt*foreground:   #d1d8e6
XTerm*foreground:   #d1d8e6
UXTerm*foreground:  #d1d8e6
URxvt*background:   [100]#231f21
XTerm*background:   #231f21
UXTerm*background:  #231f21
URxvt*cursorColor:  #d1d8e6
XTerm*cursorColor:  #d1d8e6
UXTerm*cursorColor: #d1d8e6
URxvt*borderColor:  [100]#231f21

! Colors 0-15.
*.color0: #231f21
*color0:  #231f21
*.color1: #497098
*color1:  #497098
*.color2: #3D86B3
*color2:  #3D86B3
*.color3: #5C8AAA
*color3:  #5C8AAA
*.color4: #498CB7
*color4:  #498CB7
*.color5: #5FA4CB
*color5:  #5FA4CB
*.color6: #93BAD8
*color6:  #93BAD8
*.color7: #d1d8e6
*color7:  #d1d8e6
*.color8: #9297a1
*color8:  #9297a1
*.color9: #497098
*color9:  #497098
*.color10: #3D86B3
*color10:  #3D86B3
*.color11: #5C8AAA
*color11:  #5C8AAA
*.color12: #498CB7
*color12:  #498CB7
*.color13: #5FA4CB
*color13:  #5FA4CB
*.color14: #93BAD8
*color14:  #93BAD8
*.color15: #d1d8e6
*color15:  #d1d8e6

! Black color that will not be affected by bold highlighting.
*.color66: #231f21
*color66:  #231f21

! Xclock colors.
XClock*foreground: #d1d8e6
XClock*background: #231f21
XClock*majorColor:  rgba:d1/d8/e6/ff
XClock*minorColor:  rgba:d1/d8/e6/ff
XClock*hourColor:   rgba:d1/d8/e6/ff
XClock*minuteColor: rgba:d1/d8/e6/ff
XClock*secondColor: rgba:d1/d8/e6/ff

! Set depth to make transparency work.
URxvt*depth: 32


! XTerm

! General settings
XTerm*termName: xterm-256color
XTerm*geometry: 100x28
XTerm*saveLines: 1024
XTerm*scrollBar: False
XTerm*loginshell: False
XTerm*cursorBlink: False

! Fonts and Encoding
XTerm*utf8: True
XTerm*locale: True
XTerm*utf8Title: True
XTerm*renderFont: True
XTerm*preeditType: Root
XTerm*xftAntialias: true

! Trim trailing spaces
XTerm*trimSelection: true

! Fix alt-key inputting
XTerm*eightBitInput: false
XTerm*metaSendsEscape: true

! Copy and paste with clipboard
XTerm*translations: #override \
	Ctrl Shift <KeyPress> C: copy-selection(CLIPBOARD) \n\
	Ctrl Shift <KeyPress> V: insert-selection(CLIPBOARD)

! Allow selecting email/url by double-click
XTerm*charClass: 33:48,37-38:48,45-47:48,64:48,58:48,126:48,61:48,63:48,43:48,35:48

! Font size controls
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show

! Default Size
URxvt.geometry: 100x28
Xft.dpi: 130
